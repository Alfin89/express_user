<%- include('layouts/head.ejs') %>

    <%- include('layouts/navbar.ejs') %>

        <!-- Content -->

        <div class="container mt-5 card">
            <div class="row">
                <div class="col-lg-12">
                    <% if (message) { %>
                        <div class="alert alert-dismissible fade show alert-<%= message.type %> mt-2" role="alert">
                            <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="close"></button>
                            <strong>
                                <%= message.message %>
                            </strong>
                        </div>
                        <% } %>

                            <% if (users !="" ) { %>
                                <table id="myTable" class="table table-light table-striped table-hover mt-5 mb-5">
                                    <thead>
                                        <tr>
                                            <th scope="col">No</th>
                                            <th scope="col">Image</th>
                                            <th scope="col">Name</th>
                                            <th scope="col">Email</th>
                                            <th scope="col">Phone</th>
                                            <th scope="col">Options</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% users.forEach((item, index)=> { %>
                                            <tr class="align-middle">
                                                <th scope="row">
                                                    <%= index %>
                                                </th>
                                                <td><img src="<%= item.image %>" width="70" class="img-thumbnail"></td>
                                                <td>
                                                    <%= item.name %>
                                                </td>
                                                <td>
                                                    <%= item.email %>
                                                </td>
                                                <td>
                                                    <%= item.phone %>
                                                </td>
                                                <td>
                                                    <a href="/edit/<%= item._id %>" class="text-success me-3"><i
                                                            class="fa-regular fa-pen-to-square"></i>
                                                    </a>
                                                    <a href="/delete/<%= item.id %>" class="text-danger"><i
                                                            class="fa-solid fa-trash"></i></a>
                                                </td>
                                            </tr>
                                            <% }) %>
                                    </tbody>
                                </table>
                                <% } else { %>
                                    <h1 class="text-center text-secondary mt-5">Tudak ada data yang diinput</h1>
                                    <% } %>
                </div>
            </div>
        </div>
        <!-- EndContent -->
        <%- include('layouts/footer.ejs') %>